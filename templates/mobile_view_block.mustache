{{!
    @template block_mycourses/main

    This template renders the main content area for the mycourses block.

    Example context (json):
    {}
}}
{{=<% %>=}}
<div>
    <ion-item-divider class="item item-divider item-md item-divider-md">
        <ion-label class="label">
            <h2>{{ 'plugin.block_mycourses.pluginname' | translate }}</h2>
        </ion-label>
    </ion-item-divider>
    <ion-card>
        <ion-list>
            <ion-list-header>{{ 'plugin.block_mycourses.availableheader' | translate }}</ion-list-header>
            <%#availableview.courses%>
            <ion-item>
                <a ion-item href="<%url%>" core-link capture="true">
                    <img item-start src="<% image %>" class="courseimage" />
                    <%fullname%>
                </a>
            </ion-item>
            <%/availableview.courses%>
        </ion-list>
    </ion-card>
    <ion-card>
        <ion-list>
            <ion-list-header>{{ 'plugin.block_mycourses.inprogressheader' | translate }}</ion-list-header>
            <%#inprogressview.courses%>
            <ion-item>
                <a ion-item href="<%url%>" core-link capture="true">
                    <img item-start src="<% image %>" class="courseimage" />
                    <%fullname%>
                    <ion-badge item-end><%progress%>%</ion-badge>
                </a>
            </ion-item>
            <%/inprogressview.courses%>
        </ion-list>
    </ion-card>
    <ion-card>
        <ion-list>
            <ion-list-header>{{ 'plugin.block_mycourses.completedheader' | translate }}</ion-list-header>
            <%#completedview.courses%>
            <ion-item>
                <a ion-item href="<%url%>" core-link capture="true">
                    <img item-start src="<% image %>" class="courseimage" />
                    <%fullname%>
                    <ion-badge item-end><%progress%>%</ion-badge>
                </a>
            </ion-item>
            <%/completedview.courses%>
        </ion-list>
    </ion-card>
</div>